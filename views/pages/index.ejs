</div>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/js/theme.js"></script>
<script src="/js/common_all.js"></script>
<script src="/js/news.js"></script>
<script src="/js/weather.js"></script>
<script src="/js/search.js"></script>
<script src="/js/tasks.js"></script>


</body>
<script>

    $("#add_button").click(function () {
        console.log('clicked');
        let ct = $(".tasks-div").length-1;
        console.log('ct',ct);
        let id_str = 'id="task-'+ct+'"';
        console.log(id_str);
        $("#tasks-col").append('<div class="tasks-div" '+id_str+'  style="vertical-align: middle;display: flex; margin:10px; align-items: center;border-radius: 15px;background: var(--bs-indigo);height: 50px;box-shadow: 2px 3px 4px 0px rgb(110,171,180);" ><input type="checkbox" class="form-check-input"  onclick="task_checked('+ct+')" style="/*float: left;*/margin-left: 20px;width: 20px;height: 20px;"><input type="text" class="tasks" id="'+ct+'" style="text-align: left;vertical-align: middle;color: #000000;display: inline-block;background: var(--bs-cyan);width: 90%;height: 60%;margin: 20px;border-radius: 20px;padding-left: 15px;padding-top: 3px;font-weight: bold;" ></input></div');
