<% for(let i=0;i<resp['articles'].length;i++) { %>
<% if(resp['articles'][i]['excerpt']==null && resp['articles'][i]['summary']==null ){ %>
    <% continue} %>
<div class="card" style="margin: 15px">
    <div class="card-body">
        <h4 class="card-title" style="color: #6F42C1"><a href='<%= resp['articles'][i]['link'] %>' target="_blank" rel="noopener noreferrer"><%= resp['articles'][i]['title'] %></a></h4>
        <div style="display: inline-flex;align-items: center;"><% if(resp['articles'][i]['media']!=null) {%>
            <img style="width: 100px; height: 80px" src='<%= resp['articles'][i]['media'] %>'>
            <% } %>
            <% if(resp['articles'][i]['excerpt']!=null){ %>
                <p style="/*float: right;*/margin-left: 10px;"><%= resp['articles'][i]['excerpt'] %></p>
            <% } else { %>
                <p style="/*float: right;*/margin-left: 10px;"><%= resp['articles'][i]['summary'] %></p>
            <% }%>
        </div>
    </div>
</div>

<% } %>